{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=price-monitor.db"
  },
  "ScraperSettings": {
    "DefaultDelayMs": 2500,
    "NavigationTimeoutSeconds": 30,
    "MaxParallelWebsites": 1,
    "Headless": true,
    "Websites": [
      {
        "Name": "Digikala",
        "BaseUrl": "https://www.digikala.com/",
        "SearchUrlTemplate": "https://www.digikala.com/search/?q={name}",
        "SearchInputSelector": "input[data-testid='search-input']",
        "SearchSubmitSelector": "button[data-testid='search-submit']",
        "ResultContainerSelector": "ul[data-testid='product-list']",
        "ResultItemSelector": "ul[data-testid='product-list'] li",
        "ResultTitleSelector": "a[data-testid='product-title']",
        "ResultLinkSelector": "a[data-testid='product-title']",
        "MinimumMatchScore": 0.55,
        "PriceSelector": "div[data-testid='price-box']",
        "TitleSelector": "h1[data-testid='product-title']",
        "AvailabilitySelector": "div[data-testid='availability']",
        "EvidenceSelector": "div[data-testid='price-box']",
        "PriceRegex": "\\d+",
        "RequestDelayMs": 2500,
        "Enabled": true,
        "Currency": "IRR"
      },
      {
        "Name": "Bamilo",
        "BaseUrl": "https://www.bamilo.com/",
        "SearchUrlTemplate": "https://www.bamilo.com/search?q={name}",
        "ResultContainerSelector": "div.products-grid",
        "ResultItemSelector": "div.products-grid article.product-item",
        "ResultTitleSelector": "h2.product-title a",
        "ResultLinkSelector": "h2.product-title a",
        "PriceSelector": "span.price",
        "TitleSelector": "h1",
        "AvailabilitySelector": "div.stock",
        "PriceRegex": "\\d+",
        "RequestDelayMs": 2500,
        "Enabled": false,
        "Currency": "IRR"
      }
    ]
  }
}
