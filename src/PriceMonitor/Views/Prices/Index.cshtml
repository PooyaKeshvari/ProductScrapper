@model IEnumerable<PriceMonitor.Models.PriceEntry>
@{
    ViewData["Title"] = "Prices";
}
<h2>Latest Prices</h2>
<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Product</th>
            <th>Website</th>
            <th>Price</th>
            <th>Currency</th>
            <th>Confidence</th>
            <th>Retrieved</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var price in Model)
    {
        <tr>
            <td>@price.Product?.Name</td>
            <td>@price.Website</td>
            <td>@price.Price.ToString("N0")</td>
            <td>@price.Currency</td>
            <td>@price.Confidence.ToString("P0")</td>
            <td>@price.RetrievedAt.ToLocalTime()</td>
        </tr>
    }
    </tbody>
</table>
