@model PriceMonitor.Models.Product
@{
    ViewData["Title"] = "Create Product";
}
<h2>Create Product</h2>
<form asp-action="Create" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Sku" class="form-label"></label>
        <input asp-for="Sku" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Brand" class="form-label"></label>
        <input asp-for="Brand" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="InternalPrice" class="form-label"></label>
        <input asp-for="InternalPrice" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
