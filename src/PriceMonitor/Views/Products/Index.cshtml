@model IEnumerable<PriceMonitor.Models.Product>
@{
    ViewData["Title"] = "Products";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Products</h2>
    <a class="btn btn-primary" asp-action="Create">Add Product</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>SKU</th>
            <th>Brand</th>
            <th>Internal Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Sku</td>
            <td>@item.Brand</td>
            <td>@item.InternalPrice?.ToString("N0")</td>
            <td class="text-end">
                <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
